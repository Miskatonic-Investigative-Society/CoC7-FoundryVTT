<h1 style="flex: 0 0 auto;">{{localize 'CoC7.InvestigatorWizard.TitleOccupationSkills'}}</h1>
<div class="scrollsection scroll-to-occupation">
  <div class="form-group">{{localize 'CoC7.InvestigatorWizard.OccupationDefaultSkills' count=default}}</div>
  <div class="flexcol">
    <ol class="skills-list">
      {{#each skillItems as |skill|}}
        {{#if (eq skill.group 'default')}}
          {{> 'systems/CoC7/templates/apps/investigator-wizard/toggle-skill.hbs' skill=skill toggleKey='occupationToggle'}}
        {{/if}}
      {{/each}}
    </ol>
    {{#each object.occupationGroups as |count index|}}
      <div class="form-group">&nbsp;</div>
      <div class="form-group">{{localize 'CoC7.InvestigatorWizard.OccupationPickThisMany' count=count}}</div>
      <ol class="skills-list">
        {{#each ../skillItems as |skill|}}
          {{#if (eq skill.group index)}}
            {{> 'systems/CoC7/templates/apps/investigator-wizard/toggle-skill.hbs' skill=skill toggleKey='occupationToggle'}}
          {{/if}}
        {{/each}}
      </ol>
    {{/each}}
    <div class="form-group">&nbsp;</div>
    <div class="form-group">{{#if object.personalText}}{{object.personal}} {{object.personalText}}{{else}}{{localize 'CoC7.InvestigatorWizard.OccupationPickThisMany' count=object.personal}}{{/if}}</div>
    <ol class="skills-list" data-type="occupationOther">
      {{#each skillItems as |skill|}}
        {{#if (eq skill.group 'other')}}
          {{> 'systems/CoC7/templates/apps/investigator-wizard/toggle-skill.hbs' skill=skill toggleKey='occupationToggle'}}
        {{/if}}
      {{/each}}
   </ol>
  </div>
</div>
<div style="flex: 0 0 auto;">
  <div class="form-group status flexrow"><div style="flex: 0 0 auto;">{{#if (eq selected max)}}<i class="fa-solid fa-circle-check"></i>{{else}}<i class="fa-solid fa-circle-xmark"></i>{{/if}}</div><div>{{localize 'CoC7.InvestigatorWizard.SkillSpendOccupationCountIncorrect' count=selected max=max}}</div></div>
</div>
